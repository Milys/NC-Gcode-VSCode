// A launch configuration that launches the extension inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "${workspaceRoot}/.vscode/sample.nc",
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "preLaunchTask": "build"
        }
    ]
}